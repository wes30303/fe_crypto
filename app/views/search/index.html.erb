<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <style>
    body {
      background-color: black;
    }
    .form-control {
      height: 50px;
    }
    tr {
      color: white;
    }
    input[type="text"] {
      background-color: #000;
      color: #fff;
    }
    h1 {
      color: white;
      text-align: center;
    }
    .form-group {
    justify-content: space-between;
    }

    .page {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }
    .content {
      flex: 1;
    }
  </style>
</head>
<body>
<div class="page">

  <nav class="navbar navbar-expand-md navbar-dark bg-black">
    <a class="navbar-brand" href="/">
      <img
        src="https://res.cloudinary.com/dogimn7ip/image/upload/v1672060593/imageedit_1_7438804091_roytwx.png"
        height="30"
        alt="Logo"
        loading="lazy"
      />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about_me">About Us</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/pricing">Pricing</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <% if current_user %>
          <a class="btn btn-outline-danger" tabindex="-1" aria-disabled="true">Account Balance $<%= @current_user.account_balance %></a>
          <a <%= link_to "Logout", logout_path, class: "btn btn-outline-danger", method: :delete %></a>
            <% else %>
            <a class="btn btn-outline-danger" href="/login" tabindex="-1" aria-disabled="true">Login</a>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>

  <% if current_user %>
    <% else %>
    <h1> please login to trade </h1>
  <% end %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 offset-md-3 text-center" style="margin-top: 40px;">
        <form action="/search" method="GET">
          <div class="form-group d-flex align-items-center">
            <input type="text" class="form-control" placeholder="Search" name="search" style="border-radius: 60px; width: 100%;">
          </div>
        </form>
      </div>
    </div>
  </div>
<div class="container">
  <button class="btn container" style="outline: 2px solid gray; height: 35px; margin-top: 40px;"> 
      <div class="row align-items-center text-white">
        <div class="col-md-1">
          <p>#</p>
        </div>
        <div class="col-md-1">
          <p>Image</p>
        </div>
        <div class="col-md-5">
          <p>Name</p>
        </div>
        <div class="col-md-5">
          <p>Market Cap Rank</p>
        </div>
      </div>
  </button> 
 <% @crypto.each_with_index do |crypto, index| %>
    <a href="google">
      <button class="btn container" style="background-color: #010101; border-radius: 20px; height: 50px; margin-top: 15px;"> 
          <div class="row align-items-center text-white">
            <div class="align-items-center col-md-1">
              <p><%= index %></p>
            </div>
            <div class="align-items-center col-md-1">
                <img
                  src= <%= crypto[:large]  %>
                  height="37"
                  class="rounded-circle mb-3"
                  style="vertical-align: middle;">
            </div>
            <div class="col-md-5">
              <p><%= crypto[:name] %></p>
            </div>
            <div class="col-md-5">
              <p><%= crypto[:market_cap_rank] %></p>
            </div>
          </div>
      </button>
    </a>
  <%end%>
</div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
